{
    "manifest_version": 2,
   
    "name": "Visual Braille",
    "version": "0.1.0",
    "description": "Test",
    "icons": { "16": "icons/logo_16x16.png",
               "48": "icons/logo_48x48.png",
              "128": "icons/logo_128x128.png"},
  
    "content_scripts": [{
      "css": ["styles.css"],
      "js": ["content.js"],
      "matches": ["<all_urls>"]
    }],
    "browser_action":{
      "default_icon": "icons/logo_128x128.png",
      "default_title": "Toggle Braille Mode!"
    },
    "background":{
      "scripts": ["background.js"]
    }  
   
  }